    <title>Cenflix</title>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;700&display=swap');

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Roboto', sans-serif;
        }

        body {
            background-color: #141414;
        }

        .container {
            text-align: center;
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -60%);
        }

        .container h1 {
            color: white;
            font-size: 53.76px;
            font-weight: normal;
            margin: 36px;
        }

        .cards {
            width: 40rem;
            display: flex;
            justify-content: space-evenly;
        }

        .roleCard {
            height: 154px;
            width: 154px;
            margin: 11px;
            border-radius: 4px;
        }

        .adminRoleCard {
            background: url("/images/resources/adminCardPic.jpg") no-repeat center center/cover;
        }

        .userRoleCard {
            background: url("/images/resources/userCardPic.png") no-repeat center center/cover;
        }

        .profile-name {
            text-decoration: none;
            text-align: center;
            font-size: 20px;
            color: #8c8c8c;
        }

        .btn {
            margin-top: 6rem;
        }

        .backBtn {
            text-decoration: none;
            color: #8c8c8c;
            border: 1px solid #808080;
            padding: 9px 27px;
        }

        .roleCard:hover,
        .backBtn:hover {
            color: white;
            border: 2px solid white;
        }

        .profile-name:hover {
            color: white;
        }
